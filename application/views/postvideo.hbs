<main>
    <header>
        <h2>Post a Video</h2>
    </header>
    <form>
        <div class="text-input">
            <div>
                <label for="title">Video Title:</label>
                <input type="text" id="title">
            </div>
            <div>
                <label for="desc">Video Description:</label>
                <input type="text" id="desc">
            </div>
        </div>
        <div class="file-input">
            <label for="upload">Select Video File</label>
            <input type="file" id="upload">
        </div>
        <div class="checkbox-input">
            <div>
                <input type="checkbox" id="TOS">
                <label for="TOS">I have read and accepted the <a href="policy.html">Acceptable Use Policy</a></label>
            </div>
        </div>
        <div class="submit-form">
            <input type="submit" value="Post Video">
        </div>
    </form>
</main>